<body>
  <div class="wrap">
    <h1>Simulador de Consumo de Energia</h1>

    <div class="grid">
      <div class="card">
        <div class="label">Tensão</div>
        <div class="value"><span id="tensao">0</span> <span class="muted">V</span></div>
      </div>
      <div class="card">
        <div class="label">Corrente</div>
        <div class="value"><span id="corrente">0</span> <span class="muted">A</span></div>
      </div>
      <div class="card">
        <div class="label">Potência</div>
        <div class="value"><span id="potencia">0</span> <span class="muted">kW</span></div>
      </div>
    </div>

    <div class="card" style="margin-top:14px">
      <div class="row" style="justify-content:space-between;gap:16px">
        <div class="row">
          <label class="label" for="limiteEnergia" style="margin-right:8px">Energia disponível (kWh)</label>
          <input type="number" id="limiteEnergia" placeholder="Ex: 10" min="0" step="0.1">
          <button id="btnDefinir">Submeter</button>
        </div>
        <div class="row">
          <button id="btnIniciar">Iniciar simulação</button>
          <button class="secondary" id="btnParar">Parar</button>
        </div>
      </div>

      <div class="row" style="margin-top:14px;gap:24px">
        <div><span class="label">Consumo acumulado</span><div class="value" id="consumoAcumulado">0.000 <span class="muted">kWh</span></div></div>
        <div><span class="label">Limite atual</span><div class="value" id="limiteAtual">0.000 <span class="muted">kWh</span></div></div>
        <div><span class="label">Status</span><div id="status" class="pill">Aguardando</div></div>
      </div>

      <div class="progress" style="margin-top:10px">
        <div id="bar" class="bar"></div>
      </div>
    </div>

    <div class="card" style="margin-top:14px">
      <div class="label" style="margin-bottom:8px">Notificações</div>
      <div id="notifs" class="log"></div>
    </div>

    <p class="muted" style="margin-top:10px">
      * Esta página simula a recepção de dados como se viessem por WebSocket, gerando leituras a cada 1s.
    </p>
  </div>

  <script>
    // ------------------------
    // estado do simulador
    // ------------------------
    let consumoAcumulado = 0; // kWh
    let limiteEnergia = 0;    // kWh (definido pelo usuário)
    let aviso75 = false;
    let ultimaLeituraMs = null;
    let timer = null;

    const elTensao = document.getElementById('tensao');
    const elCorrente = document.getElementById('corrente');
    const elPotencia = document.getElementById('potencia');
    const elConsumo = document.getElementById('consumoAcumulado');
    const elLimite = document.getElementById('limiteAtual');
    const elBar = document.getElementById('bar');
    const elStatus = document.getElementById('status');
    const log = document.getElementById('notifs');

    // ------------------------
    // UI helpers
    // ------------------------
    function setStatus(text, kind){
      elStatus.textContent = text;
      elStatus.className = 'pill ' + (kind || '');
    }
    function logMsg(msg){
      const t = new Date().toLocaleTimeString();
      log.innerHTML = `[${t}] ${msg}<br>` + log.innerHTML;
    }
    function format(n){ return Number(n).toFixed(3); }

    // ------------------------
    // definição de limite pelo usuário
    // ------------------------
    document.getElementById('btnDefinir').addEventListener('click', () => {
      const v = parseFloat(document.getElementById('limiteEnergia').value);
      if (isNaN(v) || v <= 0){
        alert('Digite um valor válido (kWh) maior que zero.');
        return;
      }
      limiteEnergia = v;
      consumoAcumulado = 0;
      aviso75 = false;
      ultimaLeituraMs = null;
      elConsumo.innerHTML = `${format(consumoAcumulado)} <span class="muted">kWh</span>`;
      elLimite.innerHTML = `${format(limiteEnergia)} <span class="muted">kWh</span>`;
      elBar.style.width = '0%';
      setStatus('Limite definido', '');
      logMsg(`Limite definido para ${format(limiteEnergia)} kWh.`);
    });

    // ------------------------
    // simulação de "recepção" de dados
    // gera JSON como o do seu sistema: {HUM: V, TEMP: A, POT: kW}
    // ------------------------
    function gerarLeitura(){
      // tensão oscilando ao redor de 220V
      const V = 220 + (Math.sin(Date.now()/1500) * 10) + (Math.random()*2-1);
      // corrente entre 0 e ~9A com variação
      const I = Math.abs(7 + (Math.sin(Date.now()/900) * 3) + (Math.random()*1.2-0.6));
      // potência ativa aproximada (kW)
      const kW = (V * I) / 1000;

      const pacote = { HUM: V.toFixed(1), TEMP: I.toFixed(2), POT: kW.toFixed(3) };
      onMensagemRecebida(JSON.stringify(pacote));
    }

    // "handler" como se fosse websock.onmessage
    function onMensagemRecebida(evtData){
      const JSONobj = JSON.parse(evtData);
      // atualiza mostradores
      elTensao.textContent = JSONobj.HUM;
      elCorrente.textContent = JSONobj.TEMP;
      elPotencia.textContent = JSONobj.POT;

      // acumula consumo
      const agora = Date.now();
      if (ultimaLeituraMs === null) {
        ultimaLeituraMs = agora;
        return; // primeira amostra define referência temporal
      }
      const deltaH = (agora - ultimaLeituraMs) / 3600000; // ms -> horas
      ultimaLeituraMs = agora;

      const potenciaKW = parseFloat(JSONobj.POT); // já em kW
      consumoAcumulado += potenciaKW * deltaH;    // kWh = kW × h
      elConsumo.innerHTML = `${format(consumoAcumulado)} <span class="muted">kWh</span>`;

      // progresso relativo ao limite (se houver)
      if (limiteEnergia > 0) {
        const pct = Math.min(100, (consumoAcumulado/limiteEnergia)*100);
        elBar.style.width = pct + '%';

        if (!aviso75 && consumoAcumulado >= 0.75 * limiteEnergia) {
          aviso75 = true;
          setStatus('Atenção: 75% usados', 'warn');
          alert('⚠️ Sua energia está acabando! Restam apenas 25% do valor disponível. Recarregue.');
          logMsg('Aviso: consumo atingiu 75% do limite.');
        }

        if (consumoAcumulado >= limiteEnergia) {
          // corte/limpeza: zera tudo na página
          alert('⚡ Limite de energia atingido! Dados serão resetados.');
          logMsg('Limite atingido: dados resetados e energia “cortada” na simulação.');

          consumoAcumulado = 0;
          limiteEnergia = 0;
          aviso75 = false;
          ultimaLeituraMs = null;

          // limpar UI
          document.getElementById('limiteEnergia').value = '';
          elConsumo.innerHTML = `0.000 <span class="muted">kWh</span>`;
          elLimite.innerHTML   = `0.000 <span class="muted">kWh</span>`;
          elBar.style.width = '0%';
          elTensao.textContent = '0';
          elCorrente.textContent = '0';
          elPotencia.textContent = '0';
          setStatus('Energia cortada (simulação)', 'danger');
        }
      }
    }

    // ------------------------
    // controles de simulação (start/stop)
    // ------------------------
    document.getElementById('btnIniciar').addEventListener('click', () => {
      if (timer) return;
      timer = setInterval(gerarLeitura, 1000); // “tick” de 1s
      setStatus('Recebendo dados…', '');
      logMsg('Simulação iniciada (amostras a cada 1s).');
    });

    document.getElementById('btnParar').addEventListener('click', () => {
      if (timer) {
        clearInterval(timer);
        timer = null;
        setStatus('Parado', '');
        logMsg('Simulação parada.');
      }
    });
  </script>
</body>
</html>
