  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Simulador de Consumo de Energia</title>
  <style>
    :root{--bg:#0f172a;--card:#111827;--fg:#e5e7eb;--accent:#22d3ee;--warn:#f59e0b;--danger:#ef4444;}
    *{box-sizing:border-box}
    body{margin:0; font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu; background:linear-gradient(180deg,#0b1023,#0f172a);}
    .wrap{max-width:980px;margin:32px auto;padding:0 16px;color:var(--fg)}
    h1{margin:0 0 16px;font-size:28px}
    .grid{display:grid;grid-template-columns:repeat(3,1fr);gap:12px}
    .card{background:rgba(255,255,255,.06); border:1px solid rgba(255,255,255,.08); border-radius:16px;padding:16px}
    .label{opacity:.85;font-size:12px;letter-spacing:.3px;text-transform:uppercase}
    .value{font-size:28px;font-weight:700}
    .row{display:flex;gap:12px;align-items:center;flex-wrap:wrap}
    input[type="number"]{padding:10px 12px;border-radius:12px;border:1px solid rgba(255,255,255,.18);background:rgba(255,255,255,.06);color:var(--fg);width:160px}
    button{border:0;border-radius:12px;padding:10px 14px;font-weight:600;color:#0b1023;background:var(--accent);cursor:pointer}
    button.secondary{background:#334155;color:var(--fg)}
    .muted{opacity:.75}
    .progress{height:14px;border-radius:999px;background:rgba(255,255,255,.08);overflow:hidden;border:1px solid rgba(255,255,255,.1)}
    .bar{height:100%;width:0%;background:linear-gradient(90deg,#22d3ee,#60a5fa)}
    .log{max-height:160px;overflow:auto;font-family:ui-monospace,Menlo,Consolas;background:rgba(0,0,0,.35);padding:10px;border-radius:12px;border:1px solid rgba(255,255,255,.08)}
    .pill{display:inline-block;padding:4px 10px;border-radius:999px;font-size:12px;font-weight:700}
    .pill.warn{background:rgba(245,158,11,.15);color:#fbbf24;border:1px solid rgba(245,158,11,.35)}
    .pill.danger{background:rgba(239,68,68,.15);color:#fca5a5;border:1px solid rgba(239,68,68,.35)}
    a{color:var(--fg)}
  </style>
